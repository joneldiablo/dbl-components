{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "lib": ["dom", "es2019"]
  },
  "include": [
    "src/js/**/*",
    "src/app-icons-v1.0/**/*.json",
    "ts/**/*",
    "types-fix.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
